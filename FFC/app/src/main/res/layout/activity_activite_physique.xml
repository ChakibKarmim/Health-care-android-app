<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activitephys"
    tools:context=".ActivitePhysique">

    <HorizontalScrollView
        android:layout_width="393dp"
        android:layout_height="576dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:foregroundTint="#00FFFFFF"
        android:rotationX="0"
        android:rotationY="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#0C000000"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="395dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                app:cardBackgroundColor="#00FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioGroup
                        android:id="@+id/radioGroup44"
                        android:layout_width="323dp"
                        android:layout_height="51dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.847"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView109">

                        <RadioButton
                            android:id="@+id/oui_1"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="oui"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/non_1"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="non"
                            android:textColor="#006064" />

                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/radioGroup5"
                        android:layout_width="305dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.677"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView21">

                        <RadioButton
                            android:id="@+id/oui_3"
                            android:layout_width="249dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Oui"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/qst3_3"
                            android:layout_width="248dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Non"
                            android:textColor="#455A64" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/textView109"
                        android:layout_width="304dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="52dp"
                        android:text="Marchez-vous d’un bon pas tous les jours ?"
                        android:textColor="#455A64"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.695"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView200"
                        android:layout_width="291dp"
                        android:layout_height="63dp"
                        android:layout_marginTop="176dp"
                        android:layout_marginEnd="40dp"
                        android:text="Combien de fois par semaine pratiquez-vous des activités physiques pendant au moins 30 minutes ?"
                        android:textColor="#455A64"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="303dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="424dp"
                        android:layout_marginEnd="32dp"
                        android:text="À votre domicile, vous mangez le plus souvent ?"
                        android:textColor="#455A64"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioGroup
                        android:id="@+id/radioGroup4"
                        android:layout_width="319dp"
                        android:layout_height="178dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.842"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView200">

                        <RadioButton
                            android:id="@+id/qst2_1"
                            android:layout_width="195dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Jamais"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/qst2_2"
                            android:layout_width="195dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="1 fois"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/oui_2"
                            android:layout_width="197dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="2 fois"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/non_2"
                            android:layout_width="198dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="3 et +"
                            android:textColor="#455A64" />

                    </RadioGroup>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="44dp"
                        android:contentDescription="TODO"
                        app:layout_constraintEnd_toStartOf="@+id/radioGroup4"
                        app:layout_constraintHorizontal_bias="0.875"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/one" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="76dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView200"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView"
                        app:srcCompat="@drawable/two" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="204dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView21"
                        app:layout_constraintHorizontal_bias="0.777"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2"
                        app:srcCompat="@drawable/tree" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="1/2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="395dp"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#00FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="395dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView19"
                        android:layout_width="306dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="44dp"
                        android:text="Concernant votre profil sportif, diriez-vous que :"
                        android:textColor="#455A64"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.763"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="305dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="220dp"
                        android:layout_marginEnd="28dp"
                        android:text="Parmi les activités suivantes, laquelle pratiqueriez-vous le plus facilement pendant vos weekends ?"
                        android:textColor="#455A64"
                        app:layout_constraintBottom_toTopOf="@+id/radioGroup6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.966" />

                    <RadioGroup
                        android:id="@+id/radioGroup6"
                        android:layout_width="310dp"
                        android:layout_height="178dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.729"
                        app:layout_constraintStart_toStartOf="parent">

                        <RadioButton
                            android:id="@+id/qst5_1"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="Jouer à des jeux vidéos"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/qst5_2"
                            android:layout_width="132dp"
                            android:layout_height="48dp"
                            android:text="Faire du sport"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/qst5_3"
                            android:layout_width="196dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Vous promener"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/qst5_4"
                            android:layout_width="224dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Regarder la télévision"
                            android:textColor="#455A64" />

                    </RadioGroup>

                    <RadioGroup
                        android:layout_width="321dp"
                        android:layout_height="199dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/textView20"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView19"
                        app:layout_constraintVertical_bias="0.08">

                        <RadioButton
                            android:id="@+id/qst4_1"
                            android:layout_width="265dp"
                            android:layout_height="48dp"
                            android:text="Vous n'avez jamais fait de sport"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/qst4_2"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Vous avez fait du sport et n'en faites plus depuis un an ou plus"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/qst4_3"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Vous faites du sport régulièrement"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/qst4_4"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Vous faites du sport de temps en temps (en vacances par exemple)"
                            android:textColor="#455A64" />

                    </RadioGroup>

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="44dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView19"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/four" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="232dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView20"
                        app:layout_constraintTop_toBottomOf="@+id/imageView4"
                        app:srcCompat="@drawable/five" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="12dp"
                        android:text="2/2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="255dp"
        android:layout_height="121dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/beth_ellen"
        android:lineSpacingExtra="-40sp"
        android:text="Mon activité physique"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:backgroundTint="#F47C7C"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:backgroundTint="#F47C7C"
        android:text="Prev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>