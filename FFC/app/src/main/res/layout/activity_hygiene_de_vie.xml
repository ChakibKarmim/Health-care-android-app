<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hygienedevie"
    tools:context=".HygieneDeVie">

    <HorizontalScrollView
        android:layout_width="393dp"
        android:layout_height="576dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:foregroundTint="#00FFFFFF"
        android:rotationX="0"
        android:rotationY="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#0C000000"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="395dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                app:cardBackgroundColor="#00FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioGroup
                        android:id="@+id/radioGroup44"
                        android:layout_width="323dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.861"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView109">

                        <RadioButton
                            android:id="@+id/oui_1"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Oui"
                            android:textColor="#006064" />

                        <RadioButton
                            android:id="@+id/non_1"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Non"
                            android:textColor="#455A64" />

                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/radioGroup5"
                        android:layout_width="305dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.666"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView21">

                        <RadioButton
                            android:id="@+id/oui_3"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Oui"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/non_3"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Non"
                            android:textColor="#455A64" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/textView109"
                        android:layout_width="286dp"
                        android:layout_height="62dp"
                        android:layout_marginTop="52dp"
                        android:text="Vous arrive-t-il de boire plus de 3 verres d’alcool dans la journée 1 à 2 fois par semaine (vin et bière compris) ?"
                        android:textColor="#455A64"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.627"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView200"
                        android:layout_width="290dp"
                        android:layout_height="49dp"
                        android:layout_marginTop="200dp"
                        android:layout_marginEnd="44dp"
                        android:text="Vous arrive-t-il de boire des boissons énergisantes ?"
                        android:textColor="#455A64"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="309dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="336dp"
                        android:layout_marginEnd="28dp"
                        android:text="Dormez-vous plus de 7 heures par nuit ?"
                        android:textColor="#455A64"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioGroup
                        android:id="@+id/radioGroup4"
                        android:layout_width="325dp"
                        android:layout_height="34dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.842"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView200">

                        <RadioButton
                            android:id="@+id/oui_2"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Oui"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/non_2"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Non"
                            android:textColor="#455A64" />

                    </RadioGroup>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="44dp"
                        android:contentDescription="TODO"
                        app:layout_constraintEnd_toStartOf="@+id/radioGroup4"
                        app:layout_constraintHorizontal_bias="0.875"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/one" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="108dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView200"
                        app:layout_constraintHorizontal_bias="0.6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView"
                        app:srcCompat="@drawable/two" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="76dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView21"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2"
                        app:srcCompat="@drawable/tree" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="275dp"
                        android:layout_height="19dp"
                        android:layout_marginEnd="60dp"
                        android:layout_marginBottom="116dp"
                        android:text="Êtes-vous sujet à des troubles du sommeil ?"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="#455A64"/>

                    <RadioGroup
                        android:layout_width="281dp"
                        android:layout_height="63dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="56dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView4">

                        <RadioButton
                            android:id="@+id/oui_4"
                            android:layout_width="91dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Oui"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/non_4"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Non"
                            android:textColor="#455A64" />

                    </RadioGroup>

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="60dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView4"
                        app:layout_constraintTop_toBottomOf="@+id/imageView3"
                        app:srcCompat="@drawable/four" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="231dp"
        android:layout_height="118dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/beth_ellen"
        android:lineSpacingExtra="-40sp"
        android:text="Hygiene de vie"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:backgroundTint="#F47C7C"
        android:text="Prev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:backgroundTint="#F47C7C"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>