<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gestionstress"
    tools:context=".GestionStress">

    <HorizontalScrollView
        android:layout_width="393dp"
        android:layout_height="576dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:foregroundTint="#00FFFFFF"
        android:rotationX="0"
        android:rotationY="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#0C000000"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="395dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                app:cardBackgroundColor="#00FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioGroup
                        android:id="@+id/radioGroup44"
                        android:layout_width="310dp"
                        android:layout_height="54dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.861"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView109">

                        <RadioButton
                            android:id="@+id/oui_1"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Oui"
                            android:textColor="#006064" />

                        <RadioButton
                            android:id="@+id/non_1"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Non"
                            android:textColor="#455A64" />

                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/radioGroup5"
                        android:layout_width="300dp"
                        android:layout_height="123dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.666"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView21">

                        <RadioButton
                            android:id="@+id/qst3_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="Jamais"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/qst3_2"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="De temps en temps"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/qst3_3"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Tout le temps"
                            android:textColor="#455A64" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/textView109"
                        android:layout_width="288dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="52dp"
                        android:text="Prenez-vous des antidépresseurs, anxiolytiques ou hypnotiques ?"
                        android:textColor="#455A64"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.627"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView200"
                        android:layout_width="290dp"
                        android:layout_height="49dp"
                        android:layout_marginTop="200dp"
                        android:layout_marginEnd="44dp"
                        android:text="Gérez-vous seul(e) votre environnement familial ?"
                        android:textColor="#455A64"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="307dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="336dp"
                        android:layout_marginEnd="28dp"
                        android:text="Vous sentez-vous stressé(e) ou anxieux(se) ?"
                        android:textColor="#455A64"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <RadioGroup
                        android:id="@+id/radioGroup4"
                        android:layout_width="321dp"
                        android:layout_height="54dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.842"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView200">

                        <RadioButton
                            android:id="@+id/non_2"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Non"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/oui_2"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Oui"
                            android:textColor="#455A64" />

                    </RadioGroup>

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="44dp"
                        android:contentDescription="TODO"
                        app:layout_constraintEnd_toStartOf="@+id/radioGroup4"
                        app:layout_constraintHorizontal_bias="0.875"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/one" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="108dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView200"
                        app:layout_constraintHorizontal_bias="0.6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView"
                        app:srcCompat="@drawable/two" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="88dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView21"
                        app:layout_constraintHorizontal_bias="0.666"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView2"
                        app:srcCompat="@drawable/tree" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="395dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                app:cardBackgroundColor="#00FFFFFF">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioGroup
                        android:id="@+id/radioGroup51"
                        android:layout_width="295dp"
                        android:layout_height="225dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.666"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView201">

                        <RadioButton
                            android:id="@+id/qst4_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="Jamais"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/qst4_2"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="Peu"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/qst4_3"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="De façon fréquente"
                            android:textColor="#455A64" />

                        <RadioButton
                            android:id="@+id/qst4_4"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="De façon trés frèquente "
                            android:textColor="#455A64"
                            />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/textView201"
                        android:layout_width="307dp"
                        android:layout_height="46dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginEnd="24dp"
                        android:text="Vous sentez-vous stressé(e) ou anxieux(se) ?"
                        android:textColor="#455A64"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView31"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="60dp"
                        app:layout_constraintEnd_toStartOf="@+id/textView201"
                        app:layout_constraintHorizontal_bias="0.25"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/four" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="231dp"
        android:layout_height="118dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/beth_ellen"
        android:lineSpacingExtra="-40sp"
        android:text="Gestion de stress"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:backgroundTint="#F47C7C"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/button_onoff_indicator_off"
        android:backgroundTint="#F47C7C"
        android:text="Prev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>